{
  "compilerOptions": {
    "target": "ES2018",
    // ~node10
    "module": "es6",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "declaration": true,
    "declarationMap": true,
    // "sourceMap": true,
    "outDir": "./dist_ts",
    "rootDir": "./src_ts",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": [
    "src_ts/"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
